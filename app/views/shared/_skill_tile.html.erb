<% unless skill.nil? %>
  <div class="skill-container">
    <div class="img-container">
      <%= image_tag(skill.picture) %>
    </div>
    <p class="skill-name">
      <%= skill.name%>
    </p>

    <!--progress bar-->
    <% unless progress == false %>
      <p>
        Skill Level:
      </p>
      <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: <%= "#{skill.level}" + "%" %>">
          <span class="sr-only"></span>
        </div>
      </div>
    <% end %>
    <!--end progress bar-->
  </div> <!--end skill-container-->
<% end %>